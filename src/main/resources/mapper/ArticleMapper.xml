<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sunshinerao.myblog.mapper.ArticleMapper">
    <!--根据ID查找-->
    <select id="findById" resultType="com.sunshinerao.myblog.entity.Article" parameterType="long">
        SELECT * FROM t_article WHERE id = #{id}
    </select>
    <!--插入文章-->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO t_article (title, content, create_time)
        VALUES (#{title}, #{content}, #{createTime})
    </insert>
    <!--查找所有文章-->
    <select id="findAll" resultType="com.sunshinerao.myblog.entity.Article">
        SELECT * FROM t_article ORDER BY create_time DESC
    </select>
    <!--更新文章-->
    <update id="update">
        UPDATE t_article SET title = #{title}, content = #{content} WHERE id = #{id}
    </update>
    <!--删除文章-->
    <delete id="deleteById">
        DELETE FROM t_article WHERE id = #{id}
    </delete>
</mapper>